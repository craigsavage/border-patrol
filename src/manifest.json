{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.5.1",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": ["scripting", "storage", "activeTab", "downloads"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/menu.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icons/bp-icon-16.png",
    "32": "assets/icons/bp-icon-32.png",
    "48": "assets/icons/bp-icon-48.png",
    "128": "assets/icons/bp-icon-128.png"
  },
  "commands": {
    "toggle_border_patrol": {
      "suggested_key": {
        "default": "Alt+Shift+B",
        "mac": "Alt+Shift+B"
      },
      "description": "Toggle Border Patrol"
    },
    "toggle_inspector_mode": {
      "suggested_key": {
        "default": "Alt+Shift+I",
        "mac": "Alt+Shift+I"
      },
      "description": "Toggle Inspector Mode"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/*.js",
        "scripts/*.css",
        "assets/fonts/Inter-VariableFont_opsz_wght.woff2",
        "assets/fonts/Grandstander-VariableFont_wght.woff2"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
