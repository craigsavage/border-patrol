{
  "manifest_version": 3,
  "name": "Border Patrol - CSS Outliner & Debugging Tool",
  "version": "1.1.11",
  "description": "Border Patrol is a browser extension that outlines every element on a webpage, helping developers and designers visualize layouts, margins, and padding instantly.",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Border Patrol",
    "default_popup": "menu.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/border-patrol-icon-16.png",
    "32": "icons/border-patrol-icon-32.png",
    "48": "icons/border-patrol-icon-48.png",
    "128": "icons/border-patrol-icon-128.png"
  },
  "commands": {
    "toggle_border_patrol": {
      "suggested_key": {
        "default": "Alt+Shift+B",
        "mac": "Alt+Shift+B"
      },
      "description": "Toggle Border Patrol"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://chrome.google.com/webstore*",
        "https://chromewebstore.google.com/*"
      ],
      "css": ["css/overlay.css"],
      "js": ["scripts/border.js", "scripts/overlay.js"],
      "run_at": "document_end"
    }
  ]
}
