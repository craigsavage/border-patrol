{
  "type": "module",
  "name": "border-patrol",
  "version": "1.5.0",
  "description": "Are you tired of digging through complex CSS and hovering endlessly in DevTools just to figure out element boundaries, margins, and padding? **Border Patrol** is the free and open-source Chrome extension built to solve that frustration!",
  "main": "src/background.js",
  "scripts": {
    "clean": "rm -rf dist",
    "version-sync": "node scripts/version-sync.js",
    "changelog:generate": "node scripts/changelog-md-to-html.js",
    "compress:dist": "node scripts/compress-dist.js",
    "prebuild": "npm run clean && npm run version-sync && npm run changelog:generate",
    "build": "NODE_ENV=production rollup -c",
    "dev": "NODE_ENV=development rollup -c -w",
    "release": "npm run build && npm run compress:dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/craigsavage/border-patrol.git"
  },
  "keywords": [
    "border",
    "patrol",
    "css",
    "debugging",
    "devtools",
    "chrome-extension"
  ],
  "author": "Craig Savage",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/craigsavage/border-patrol/issues"
  },
  "homepage": "https://github.com/craigsavage/border-patrol#readme",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/chrome": "^0.1.14",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "babel-plugin-import": "^1.13.8",
    "cssnano": "^7.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "marked": "^16.2.1",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "rollup": "^4.50.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.92.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "antd": "^6.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
